<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:alpha="0.3">
        <shape>
            <gradient android:angle="90" android:alpha="0.3" android:startColor="@color/text_grey" android:endColor="@color/text_grey"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:alpha="0.3">
        <shape>
            <solid android:color="@color/buttonPressed" android:alpha="0.3"/>
        </shape>
    </item>
</selector>